<Page x:Class="AdService.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="Страница авторизации">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="230" Width="201">
            <Label Content="Авторизация" HorizontalAlignment="Center" FontWeight="Bold"/>
            <StackPanel Height="50" Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Content="Логин" Margin="0,0,4,0"/>
                <TextBox Name="TextBoxLogin" TextWrapping="Wrap" Text="" Width="120"/>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Content="Пароль"/>
                <PasswordBox x:Name="PasswordBox" Width="115" Height="22"/>
            </StackPanel>
            <Button Content="Войти" HorizontalAlignment="Center" Click="ButtonEnter_Click"/>
        </StackPanel>
        <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Btn_Back"/>
    </Grid>
</Page>
